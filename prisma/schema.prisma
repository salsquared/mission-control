// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model CryptoPrice {
  id        String   @id @default(cuid())
  coinId    String   // e.g. "bitcoin"
  price     Float
  timestamp DateTime @default(now())

  @@index([coinId, timestamp])
}

model SavedPaper {
  id          String   @id @default(cuid())
  arxivId     String   @unique
  title       String
  summary     String
  url         String
  authors     String
  publishedAt DateTime
  topic       String   // e.g. "AI", "Space"
  status      String   // e.g. "READ", "READ_LATER", "FAVORITE"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([status, topic])
}

model SelectedHistoricalPaper {
  id        String   @id @default(cuid())
  arxivId   String   @unique
  topic     String
  weekStart DateTime // Represents the week it was selected for

  @@index([topic, weekStart])
}

model SelectedReviewPaper {
  id        String   @id @default(cuid())
  arxivId   String   @unique
  topic     String
  weekStart DateTime // Represents the week it was selected for

  @@index([topic, weekStart])
}
